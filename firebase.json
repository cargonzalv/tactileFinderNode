{
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint && cd tactileFinderClient && rm build -r && npm run-script build && cd .."
    ]
  },
  "hosting": {
    "public": "tactileFinderClient/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/classify", "function": "classify"
      },
      {
        "source": "/api/classifyMN", "function": "classifyMN"
      },
      {
        "source": "/api/convert", "function": "convertToBase64"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
